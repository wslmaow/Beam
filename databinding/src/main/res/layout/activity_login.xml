<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data class="LoginBinding">
        <variable
            name="loginViewModel"
            type="com.august.databinding.viewmodel.LoginViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_72">
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:text="@={loginViewModel.userName}"
            android:imeOptions="actionDone"
            android:lines="1"
            android:singleLine="true"/>

        <com.qihoo.safekeyboard.PasswdEditText
            android:id="@+id/qihoo_keyboard_et_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:text="@={loginViewModel.passWord}"
            binding:keypad_letter_random="true"
            binding:keypad_number_random="true"
            binding:keypad_symbol_random="true"
            binding:keypad_key_effect="true"
            binding:max_length="20"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="登录"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/orange"
            android:textColor="@color/white"
            binding:onClickCommand="@{loginViewModel.loginOnClickCommand}"/>

    </LinearLayout>

</layout>
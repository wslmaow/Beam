<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:layout_marginLeft="35dp"
        android:textColor="@drawable/selector_text_color"
        android:background="@drawable/clip_drawable_demo"
        android:textSize="20dp"
        />
    <ImageView
        android:id="@+id/iv_drawable"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_below="@+id/tv_hello"
        android:layout_marginTop="20dp"
        android:src="@drawable/layer_list_drawable"
        android:visibility="visible"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/iv_drawable2"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_below="@+id/iv_drawable"
        android:layout_marginTop="20dp"
        android:src="@drawable/layer_list_drawable"
        android:visibility="visible"
        android:scaleType="fitXY"/>
</RelativeLayout>